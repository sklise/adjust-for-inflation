{
  "name": "inflation-calculator",
  "author": "Steve Klise",
  "version": "0.0.1",
  "dependencies": {
    "coffee-script" : "~1.6.3",
    "clean-css": "",
    "lodash": "2.4.1"
  },
  "devDependencies": {
    "catw": "~0.2.0"
  },
  "scripts": {
    "build-js": "coffee -o ./assets -c ./src",
    "watch-js": "coffee -o ./assets -w -c ./src",
    "watch": "npm run watch-css & npm run watch-js",
    "build-css": "catw -c 'lessc -' 'style/*.less' > static/bundle.css",
    "build": "npm run build-css && npm run build-js"
  }
}